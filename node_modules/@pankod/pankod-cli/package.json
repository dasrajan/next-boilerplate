{
    "name": "@pankod/pankod-cli",
    "description": "Save a lot of time by generating services, components, tests for Pankod Boilerplate projects",
    "version": "1.0.1",
    "author": {
        "name": "Batuhan Ozgur Ozdemir @BatuhanW",
        "email": "batuhan@pankod.com"
    },
    "contributors": [
        {
            "name": "Furkan Acar @futuredayv",
            "email": "furkan@pankod.com"
        }
    ],
    "scripts": {
        "start": "npm pack && npm link",
        "postpack": "rm -f oclif.manifest.json",
        "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme && npm run sync-templates",
        "sync-templates": "cp -r src/Templates lib/Templates",
        "test": "jest --runInBand",
        "test:ops": "npm t -- src/modules/element-factory/workbenches/operations",
        "version": "oclif-dev readme && git add README.md",
        "lint": "eslint . --ext .ts",
        "format": "eslint . --fix --ext .ts"
    },
    "bin": {
        "pankod-cli": "./bin/run"
    },
    "bugs": "https://github.com/Pankod/pankod-cli/issues",
    "dependencies": {
        "@oclif/command": "^1.5.19",
        "@oclif/config": "^1.13.3",
        "@oclif/plugin-help": "^2.2.1",
        "@oclif/plugin-not-found": "^1.2.3",
        "@oclif/plugin-warn-if-update-available": "^1.7.0",
        "@types/mustache": "^0.8.32",
        "chalk": "^2.4.2",
        "figlet": "^1.2.4",
        "inquirer": "^6.5.2",
        "log-symbols": "^3.0.0",
        "mustache": "^3.1.0",
        "tslib": "^1.10.0"
    },
    "devDependencies": {
        "@oclif/dev-cli": "^1.22.2",
        "@types/chalk": "^2.2.0",
        "@types/figlet": "^1.2.0",
        "@types/inquirer": "^6.5.0",
        "@types/jest": "^24.0.23",
        "@types/node": "^10.17.5",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-oclif": "0.0.15",
        "eslint-plugin-prettier": "^3.1.1",
        "globby": "^10.0.1",
        "jest": "^24.9.0",
        "jest-cli": "^24.9.0",
        "memfs": "^2.16.1",
        "prettier": "^1.19.1",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "files": [
        "/bin",
        "/lib",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "homepage": "https://github.com/pankod/pankod-cli",
    "keywords": [
        "pankod",
        "cli",
        "oclif",
        "moleculer",
        "react",
        "nextjs",
        "nextjs2",
        "svelte",
        "scaffold",
        "generate"
    ],
    "license": "MIT",
    "main": "lib/index.js",
    "oclif": {
        "commands": "./lib/commands",
        "bin": "pankod-cli",
        "plugins": [
            "@oclif/plugin-help",
            "@oclif/plugin-not-found",
            "@oclif/plugin-warn-if-update-available"
        ],
        "hooks": {
            "init": "./lib/hooks/init/check_package_json"
        },
        "warn-if-update-available": {
            "timeoutInDays": 1,
            "message": "<%= config.name %> update available from <%= chalk.greenBright(config.version) %> to <%= chalk.greenBright(latest) %>."
        }
    },
    "repository": "Pankod/pankod-cli",
    "types": "lib/index.d.ts",
    "jest": {
        "coverageDirectory": "<rootDir>/coverage",
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts)$": "ts-jest"
        },
        "testPathIgnorePatterns": [
            "lib"
        ],
        "testMatch": [
            "**/*.spec.(ts)"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests.setup.ts"
        ],
        "globalSetup": "<rootDir>/tests.reset.ts",
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        }
    },
    "pankod": {
        "project": "pankodCli"
    }
}
